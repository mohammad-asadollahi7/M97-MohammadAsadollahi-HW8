@model BankManagement.Models.User
@section header
{
        <a class="btn ms-3" asp-controller="home" 
                    asp-action="account" 
                    asp-route-user="@Model.NationalCode" 
                    type="submit">
                    <img src="~/icons/arrow.png" />
        </a>
}

<div class="m-5">
    <div class="d-flex justify-content-around gap-5 align-items-center">
        <h5>
            گردش حساب مشتری
        </h5>
        <h5>
            نام صاحب حساب:
            @Model.Name
            @Model.Family
        </h5>
        
        <h5>
            کدملی: @Model.NationalCode
        </h5>
    </div>

    <table class="table table-bordered table-striped m-1">
        <thead>
            <tr>
                <th>شماره</th>
                <th>توضیحات </th>
                <th>تاریخ تراکنش </th>
                <th>بدهکار</th>
                <th>بستانکار</th>
                <th>مانده</th>
            </tr>
        </thead>
        @foreach (var turnover in Model.turnovers)
        {
            <tbody>
                <tr>
                    <th>@turnover.Id</th>
                    <th>@turnover.Description</th>
                    <th>@turnover.TransactionDate</th>
                    <th>@turnover.Debit</th>
                    <th>@turnover.Credit</th>
                    <th>@turnover.Balance</th>
                </tr>
            </tbody>
        }
    </table>

</div>
